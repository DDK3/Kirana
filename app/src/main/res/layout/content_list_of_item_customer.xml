<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_list_of_item_customer"
    tools:context="com.example.pratik.kirana.ListOfItemCustomerActivity">


    <Button
        android:id="@+id/buttonFilterByArea"
        android:layout_width="170dp"
        android:layout_height="58dp"
        android:layout_alignParentBottom="true"
        android:text="FILTER  BY  AREA"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:id="@+id/buttonFilterByType"
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:text="ALL  ITEMS"
        android:layout_alignParentBottom="true"
        android:textSize="19sp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_centerHorizontal="true" />

    <Spinner
        android:id="@+id/spinnerViewInListActivity"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="@drawable/edit_text_style"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:paddingLeft="4dp"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingRight="4dp"/>

    <ListView
        android:id="@+id/customerListView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/buttonFilterByArea"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_item_details_customer"
    android:background="@drawable/bc2"
    tools:context="com.example.pratik.kirana.ItemDetailsCustomerActivity">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="100dp">

        <TextView
            android:id="@+id/textViewDescriptionOfItemInItemDetailsCustomer"
            style="@style/textViewLoginPages"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="#000000"
            android:text="Description  of  Item" />

        <ImageView
            android:id="@+id/imageViewInItemDetailsCustomer"
            android:layout_width="fill_parent"
            android:layout_height="250dp"
            android:contentDescription="@string/imageView"
            android:layout_below="@id/textViewDescriptionOfItemInItemDetailsCustomer"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/bluetooth" />

        <TextView
            android:id="@+id/textViewNameInItemDetailsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ItemName"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignEnd="@id/imageViewInItemDetailsCustomer"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/imageViewInItemDetailsCustomer"
            android:layout_marginLeft="25dp"
            android:textColor="#990099"
            android:textSize="16sp"
            android:layout_marginRight="25dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            android:layout_below="@id/imageViewInItemDetailsCustomer"/>

        <TextView
            android:id="@+id/textViewBrandInItemDetailsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewBrandOfItem"
            android:layout_alignEnd="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/imageViewInItemDetailsCustomer"
            android:gravity="center"
            android:layout_marginTop="6dp"
            android:textSize="16sp"
            android:textColor="#990099"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewNameInItemDetailsCustomer"/>

        <Button
            android:id="@+id/buttonAddToCartCustomer"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_below="@id/textViewBrandInItemDetailsCustomer"
            android:layout_marginTop="20dp"
            android:textColor="#800000"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:background="#ff9900"
            android:text="@string/textAddToCart"
            android:textSize="17sp" />

        <Button
            android:id="@+id/buttonCallCustomer"
            android:layout_width="145dp"
            android:layout_height="60dp"
            android:layout_below="@id/textViewBrandInItemDetailsCustomer"
            android:layout_toRightOf="@id/buttonAddToCartCustomer"
            android:layout_toEndOf="@id/buttonAddToCartCustomer"
            android:layout_marginTop="20dp"
            android:textColor="#800000"
            android:background="#ff9900"
            android:layout_alignRight="@id/imageViewInItemDetailsCustomer"
            android:layout_alignEnd="@id/imageViewInItemDetailsCustomer"
            android:text="@string/textCall"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/textViewDescri"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:text="@string/textViewDesc"
            android:textSize="22sp"
            style="@style/descriptionActivity"
            android:gravity="center_vertical"
            android:layout_below="@id/buttonAddToCartCustomer"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/buttonCallCustomer"
            android:layout_alignEnd="@id/buttonCallCustomer"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/textViewDescriptionInItemDetailsCustomer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/descTextView"
            style="@style/smallDescriptionActivity"
            android:textSize="16sp"
            android:paddingLeft="30dp"
            android:paddingStart="30dp"
            android:paddingRight="20dp"
            android:paddingEnd="20dp"
            android:layout_alignRight="@id/imageViewInItemDetailsCustomer"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignEnd="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_below="@id/textViewDescri"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewPrice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/textViewPrice"
            android:textSize="22sp"
            style="@style/descriptionActivity"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/imageViewInItemDetailsCustomer"
            android:layout_alignEnd="@id/imageViewInItemDetailsCustomer"
            android:layout_below="@id/textViewDescriptionInItemDetailsCustomer"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textViewPriceInItemDetailsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/price"
            android:textSize="16sp"
            android:textColor="#990099"
            style="@style/smallDescriptionActivity"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewPrice"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewArea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/buttonCallCustomer"
            android:layout_alignEnd="@id/buttonCallCustomer"
            android:text="@string/textViewAreaOfRetailer"
            style="@style/descriptionActivity"
            android:textSize="22sp"
            android:layout_below="@id/textViewPriceInItemDetailsCustomer"
            android:layout_marginTop="40dp"/>

        <TextView
            android:id="@+id/textViewAreaInItemDetailsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/textViewArea"
            android:textSize="16sp"
            android:textColor="#990099"
            android:layout_centerHorizontal="true"
            style="@style/smallDescriptionActivity"
            android:layout_below="@id/textViewArea"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewMakeCallToRetailer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            style="@style/descriptionActivity"
            android:layout_alignLeft="@id/imageViewInItemDetailsCustomer"
            android:layout_alignStart="@id/imageViewInItemDetailsCustomer"
            android:layout_alignRight="@id/buttonCallCustomer"
            android:layout_alignEnd="@id/buttonCallCustomer"
            android:layout_below="@id/textViewAreaInItemDetailsCustomer"
            android:text="@string/textViewMakeCallToRetailer"/>

        <TextView
            android:id="@+id/textViewNumberOfRetailerInItemDetailsCustomer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="23sp"
            android:layout_marginTop="10dp"
            style="@style/smallDescriptionActivity"
            android:textColor="#3333ff"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewMakeCallToRetailer"
            android:text="@string/textViewNumberOfRetailer"/>

    </RelativeLayout>

</ScrollView>

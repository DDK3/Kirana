<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_profile_information"
    tools:context="com.example.pratik.kirana.ProfileInformation">
<RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bc9">

    <TextView
        android:id="@+id/textViewIdSettingptionOfItemInItemDetailsRetailer"
        style="@style/textViewLoginPages"
        android:layout_width="340dp"
        android:layout_height="70dp"
        android:background="@drawable/headin_style"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:textSize="35sp"
        android:textColor="#000000"
        android:text="@string/textProfile" />

    <TextView
        android:id="@+id/textViewIdSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="ID  NO."
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textViewIdSettingptionOfItemInItemDetailsRetailer"/>

    <TextView
        android:id="@+id/textIDInProfileInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/sub_small_boxes"
        android:layout_alignBottom="@id/textViewIdSetting"
        android:text="@string/textViewForID"
        android:textSize="22sp"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:layout_toRightOf="@id/textViewIdSetting"
        android:layout_toEndOf="@id/textViewIdSetting"/>

    <TextView
        android:id="@+id/textViewFullNameSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Full Name  :- "
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textIDInProfileInfo" />

    <TextView
        android:id="@+id/textViewFullName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/texxtname"
        android:layout_centerHorizontal="true"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:layout_below="@id/textViewFullNameSetting"/>

    <TextView
        android:id="@+id/textViewUsernameSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Username  :- "
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textViewFullName"/>

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/textEmail"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/textViewUsernameSetting"/>

    <TextView
        android:id="@+id/textViewPasswordSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Password  :- "
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textViewUsername"/>

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/textRePass"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:layout_below="@id/textViewPasswordSetting"/>

    <TextView
        android:id="@+id/textViewMobileNoSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Mobile No.  :- "
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textViewPassword"/>

    <TextView
        android:id="@+id/textViewMobileNo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:text="@string/textViewNo"
        android:layout_below="@id/textViewMobileNoSetting"/>

    <TextView
        android:id="@+id/textViewDateOfBirthSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Date Of Birth  :- "
        android:layout_below="@id/textViewMobileNo"
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"/>

    <TextView
        android:id="@+id/textViewDateOfBirth"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="@string/textBirth"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:layout_below="@id/textViewDateOfBirthSetting"/>

    <TextView
        android:id="@+id/textViewAreaSetting"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Area  :- "
        style="@style/styleForPersonalInfoActivityStaticTextView"
        android:background="@drawable/small_boxes_for_text"
        android:layout_below="@id/textViewDateOfBirth" />

    <TextView
        android:id="@+id/textViewAreaInProfileInfo"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        style="@style/styleForPersonalInfoActivityDynamicTextView"
        android:background="@drawable/sub_small_boxes"
        android:text="@string/textAlibag"
        android:layout_below="@id/textViewAreaSetting"/>

    <Button
        android:id="@+id/buttonUpdateCustomerOrRetailerInformation"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/textViewAreaInProfileInfo"
        android:layout_marginTop="30dp"
        android:textColor="#800000"
        android:layout_centerHorizontal="true"
        android:background="#ff9900"
        android:text="@string/textViewUpdate"
        android:textSize="21sp" />


</RelativeLayout>
</ScrollView>

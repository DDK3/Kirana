<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_item"
    tools:context="com.example.pratik.kirana.AddItemActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/textViewRetailerSignUpHeading"
            style="@style/textViewLoginPages"
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/textViewAddItem" />

        <ImageView
            android:id="@+id/imagesViewInAddItemActivity"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/textViewRetailerSignUpHeading"
            android:contentDescription="@string/imageViewInAddItemActivity"
            android:src="@drawable/bluetooth"
            android:layout_marginTop="20dp"/>

        <Spinner
            android:id="@+id/spinnerTypeOfItem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/imagesViewInAddItemActivity"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp" />

        <Spinner
            android:id="@+id/spinnerBrandOfItem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/spinnerTypeOfItem"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/editTextProductName"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:layout_centerHorizontal="true"
            android:hint="@string/hintNameOfItem"
            android:layout_below="@id/spinnerBrandOfItem"
            android:textColorHint="#330019"
            android:paddingEnd="4dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:paddingStart="4dp" />

        <EditText
            android:id="@+id/editTextUsernameInAddItem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextProductName"
            android:background="@drawable/edit_text_style"
            android:focusable="false"
            android:editable="false"
            android:hint="@string/hintUsernameRetailer"
            android:inputType="text"
            android:textColorHint="#330019" />

        <EditText
            android:id="@+id/editTextMobileNoInAddItem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:background="@drawable/edit_text_style"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextUsernameInAddItem"
            android:hint="@string/textViewEnterMobileNo"
            android:focusableInTouchMode="true"
            android:inputType="number"
            android:textColorHint="#330019" />

        <EditText
            android:id="@+id/editTextAreaInAddItem"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:hint="@string/hintEnterArea"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextMobileNoInAddItem"
            android:background="@drawable/edit_text_style"
            android:textColorHint="#330019" />

        <EditText
            android:id="@+id/editTextProductPrice"
            android:layout_width="270dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:focusableInTouchMode="true"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextAreaInAddItem"
            android:hint="@string/hintEditTextEnterPriceOfItemInRupees"
            android:textColorHint="#330019"
            android:inputType="number"
            android:background="@drawable/edit_text_style"
            android:paddingEnd="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingStart="10dp" />

        <EditText
            android:id="@+id/editTextDescriptionOfItem"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:editable="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextProductPrice"
            android:padding="13dp"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:background="@drawable/edit_text_style"
            android:textColorHint="#330019"
            android:hint="@string/hintEnterDescriptionOfItem"
            android:paddingEnd="4dp"
            android:paddingLeft="10dp"
            android:paddingRight="4dp"
            android:paddingStart="10dp" />

        <Button
            android:id="@+id/buttonAddItem"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextDescriptionOfItem"
            android:background="@drawable/button_style"
            android:text="@string/textAddItem" />

        <Button
            android:id="@+id/buttonUpdateItemInAddItemActivity"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/editTextDescriptionOfItem"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="15dp"
            android:background="@drawable/button_style"
            android:text="@string/textUpdate" />

    </RelativeLayout>

</ScrollView>
